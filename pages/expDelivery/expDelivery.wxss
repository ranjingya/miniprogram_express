.container-order {
  background-color: rgb(240, 239, 239);
  margin: 0 20rpx;
}

.information {
  height: auto;
  width: 100%;
  display: flex;
}

.information-card {
  display: flex;
  height: auto;
  width: 100%;
  margin-top: 25rpx;
  background-color: #fff;
  border-radius: 14rpx;
}

.user-info {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.user-info-left {
  margin: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 60rpx;
  width: 60rpx;
  border-radius: 50%;
  text-align: center;
  font-size: 28rpx;
  font-weight: bold;
  color: white;
  background-color: rgb(0, 0, 0);
}

.receive-icon {
  background-color: red;
}

.user-info-middle {
  margin: 20rpx 20rpx 20rpx 0;
  display: flex;
  flex-direction: column;
}

.user-info-name {
  font-size: 36rpx;
  font-weight: bold;
}

.user-info-phone {
  font-size: 24rpx;
  font-weight: bold;
  color: #808080;
}

.user-info-address {
  font-size: 24rpx;
  color: #808080;
}

.address-button {
  margin-left: auto;
  margin-right: 48rpx;
  font-size: 28rpx;
  font-weight: bold;
  border-left: 1px solid #8080804d; 
  padding-left: 36rpx; 
}

.text-style {
  margin-top: 20rpx;
  margin-left: 60rpx;
  height: 60rpx;
  width: 200rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: bold;
}

.remark-style {
  margin-top: 70rpx;
  margin-left: -160rpx;
  height: 60rpx;
  width: 300rpx;
  display: flex;
  align-items: center;
  font-size: 20rpx;
}

.black-bg {
  display: flex;
  justify-content: center;
  /* 水平居中 */
  align-items: center;
  /* 垂直居中 */
  margin-top: -260rpx;
  margin-left: 10rpx;
  height: 60rpx;
  width: 60rpx;
  border-radius: 50%;
  /* 圆形边框 */
  text-align: center;
  font-size: 28rpx;
  font-weight: bold;
  color: white;
  /* 文字颜色 */
  background-color: rgb(0, 0, 0);
}

.red-bg {
  display: flex;
  justify-content: center;
  /* 水平居中 */
  align-items: center;
  /* 垂直居中 */
  margin-top: 80rpx;
  margin-left: 10rpx;
  height: 60rpx;
  width: 60rpx;
  border-radius: 50%;
  /* 圆形边框 */
  text-align: center;
  font-size: 28rpx;
  font-weight: bold;
  color: white;
  /* 文字颜色 */
  background-color: rgb(255, 56, 56);
}

.button-containern {
  display: flex;
}

.place-button {
  background-color: #ffffff;
  color: rgb(24, 24, 24);
  margin-top: 40rpx;
  font-size: 28rpx;
}

.container-list {
  flex-direction: column;
  display: flex;
  height: 500rpx;
  margin-top: 50rpx;
}

.use-item {
  margin-top: 20rpx;
  width: 100%;
  height: 90rpx;
  float: left;
  background-color: #fff;
  align-items: center;
  border-radius: 14rpx;
}

.use-text {
  position: absolute;
  margin-top: 25rpx;
  margin-left: 20rpx;
  font-size: 30rpx;
  color: rgb(0, 0, 0);
  z-index: 1;
}

.detail-flex {
  margin-left: 25rpx;
  margin-top: 100rpx;
  width: 700rpx;
  height: 150rpx;
  background-color: #fff;
  justify-content: space-between;
  align-items: center;
  border-top: 1px solid #ddd;
  border-radius: 14rpx;
}

.left {
  color: #fa4126;
  font-weight: bold;
  font-size: 50rpx;
  line-height: 88rpx;
  margin-left: 16px;
  margin-top: 10px;
}

.right {
  margin-top: -50rpx;
  margin-left: 430rpx;
  height: 80rpx;
  width: 240rpx;
  border-radius: 40rpx;
  background-color: #fa4126;
  color: #ffffff;
  line-height: 80rpx;
  font-weight: bold;
  font-size: 28rpx;
  text-align: center;
  margin-right: 16px;
}